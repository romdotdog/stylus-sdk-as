{
    "targets": {
        "debug": {
            "outFile": "build/debug.wasm",
            "textFile": "build/debug.wat",
            "sourceMap": true,
            "debug": true
        },
        "release": {
            "outFile": "build/release.wasm",
            "textFile": "build/release.wat",
            "sourceMap": true,
            "optimizeLevel": 3,
            "converge": false,
            "noAssert": false
        }
    },
    "options": {
        "bindings": "raw",
        "runtime": "stub",
        "shrinkLevel": 2,
        "use": "abort=assembly/index/abort",
        "disable": "bulk-memory"
    }
}
